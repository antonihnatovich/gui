<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="icButtonStyle">@style/MyYellowButton</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyYellowButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorGreen</item>
    </style>
    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">

        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textViewDefaultSettingsGrayText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/after_number_text_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="imageButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="imageViewStyle">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="vkLooksLikeButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:background">@color/vk_button_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="imageViewStyleCorrectFirstScreen">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">5dp</item>
    </style>
    <style name="iconStyleMain">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="textViewMain">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/after_number_text_color</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>

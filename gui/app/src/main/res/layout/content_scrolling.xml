<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.l.gui.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/head_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/vk_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0.5"
                android:background="@color/vk_button_color"
                android:text="@string/to_message_text"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_button"
                android:textStyle="normal" />

            <Button
                android:id="@+id/vk_send"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0.5"
                android:background="@color/vk_button_color"
                android:text="@string/add_friend_text"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_button"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/first_line_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/head_main"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_people_24dp" />

            <TextView
                android:id="@+id/view_count_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="106"
                android:textColor="@color/number_color"
                android:textSize="@dimen/number_size_value" />

            <TextView
                android:id="@+id/friend_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="друзей"
                android:textColor="@color/after_number_text_color"
                android:textSize="@dimen/text_size_textview" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/ic_separator_6sp" />

            <TextView
                android:id="@+id/view_same_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="0"
                android:textColor="@color/number_color"
                android:textSize="@dimen/number_size_value" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="общих"
                android:textColor="@color/after_number_text_color"
                android:textSize="@dimen/text_size_textview" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_line_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_line_text"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_visibility_24dp" />

            <TextView
                android:id="@+id/view_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="100"
                android:textColor="@color/number_color"
                android:textSize="@dimen/number_size_value" />

            <TextView
                android:id="@+id/followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="подписчиков"
                android:textColor="@color/after_number_text_color"
                android:textSize="@dimen/text_size_textview" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_line_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_line_text"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_home_24dp" />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="5dp"
                android:text="Город:"
                android:textColor="@color/after_number_text_color"
                android:textSize="@dimen/text_size_textview" />

            <TextView
                android:id="@+id/view_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:text="Гродно"
                android:textColor="@color/number_color"
                android:textSize="@dimen/text_size_textview" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourth_line_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/third_line_text"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_more_horiz_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="@string/view_more_information"
                android:textColor="@color/vk_button_color"
                android:textSize="@dimen/text_size_textview" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifth_line_text"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_below="@id/fourth_line_text"
            android:layout_marginTop="10dp"
            android:background="#E2E2E2"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/six_line_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fifth_line_text"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фотографии"
                android:textColor="#FF000000"
                android:textSize="@dimen/text_size_textview" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="6"
                android:textColor="@color/after_number_text_color"
                android:textSize="@dimen/number_size_value" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/seven_line_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/six_line_text"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="0.3333"
                android:scaleType="centerCrop"
                android:src="@drawable/first_pic" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="0.3333"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar_new" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_weight="0.3333"
                android:scaleType="centerCrop"
                android:src="@drawable/third_pic" />
        </LinearLayout>

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
